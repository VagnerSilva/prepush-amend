{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",
    "lib": ["ESNext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",

    /* JavaScript Support */
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,


    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "include": [
    "./src/",
    "src/**/*.d.ts" 
  ]
}
